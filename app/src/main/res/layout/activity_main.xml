<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="280dp">
                <com.artace.tourism.utils.KenBurnsEffect
                    android:id="@+id/ken_burns_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_gravity="start|bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-12dp"
                        android:fontFamily="@font/poppins"
                        android:text="Host to Host Tour"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Experience Tour Deeper than Ever"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="18sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="265dp"
                    android:layout_height="92dp"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/colorPrimaryText"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0.6"
                                android:scaleType="centerCrop"
                                android:src="@drawable/kota" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="4dp"
                                    android:text="Learn More About \nHost to Host Tour"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorSecondaryText"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <Button
                                    android:layout_width="100dp"
                                    android:layout_height="23dp"
                                    android:layout_gravity="center"
                                    android:background="@color/colorAccent"
                                    android:elevation="3dp"
                                    android:text="Learn More"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorSecondaryText"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </FrameLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:fontFamily="@font/poppins"
                    android:text="Countries"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <!--TODO: Ganti Dengan Recyclerview-->
                <android.support.v7.widget.CardView
                    android:layout_width="137dp"
                    android:layout_height="177dp"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/colorPrimaryText"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hongkong"
                                android:scaleType="centerCrop"/>

                            <TextView
                                android:layout_gravity="start|bottom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginBottom="8dp"
                                android:text="Hongkong"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </FrameLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:fontFamily="@font/poppins"
                    android:text="Categories"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="25"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:orientation="vertical">
                            <android.support.design.widget.FloatingActionButton
                                app:backgroundTint="@color/colorSecondaryText"
                                android:src="@drawable/farmer"
                                android:layout_gravity="center_horizontal"
                                app:borderWidth="0dp"
                                app:elevation="2dp"
                                android:layout_width="69dp"
                                android:layout_height="71dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Agriculture"
                                android:textColor="#000"
                                android:textAlignment="center"
                                android:textSize="@dimen/category_fontsize"
                                android:textStyle="normal"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="16dp"
                            android:layout_width="0dp"
                            android:layout_weight="25"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:orientation="vertical">
                            <android.support.design.widget.FloatingActionButton
                                app:backgroundTint="@color/colorSecondaryText"
                                android:src="@drawable/dance"
                                android:layout_gravity="center_horizontal"
                                app:borderWidth="0dp"
                                app:elevation="2dp"
                                android:layout_width="69dp"
                                android:layout_height="71dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Dance | Music"
                                android:textColor="#000"
                                android:textAlignment="center"
                                android:textSize="@dimen/category_fontsize"
                                android:textStyle="normal"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="16dp"
                            android:layout_width="0dp"
                            android:layout_weight="25"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:orientation="vertical">
                            <android.support.design.widget.FloatingActionButton
                                app:backgroundTint="@color/colorSecondaryText"
                                android:src="@drawable/food"
                                android:layout_gravity="center_horizontal"
                                app:borderWidth="0dp"
                                app:elevation="2dp"
                                android:layout_width="69dp"
                                android:layout_height="71dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Cook | Food"
                                android:textColor="#000"
                                android:textAlignment="center"
                                android:textSize="@dimen/category_fontsize"
                                android:textStyle="normal"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="16dp"
                            android:layout_width="0dp"
                            android:layout_weight="25"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:orientation="vertical">
                            <android.support.design.widget.FloatingActionButton
                                app:backgroundTint="@color/colorSecondaryText"
                                android:src="@drawable/handycraft"
                                android:layout_gravity="center_horizontal"
                                app:borderWidth="0dp"
                                app:elevation="2dp"
                                android:layout_width="69dp"
                                android:layout_height="71dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Handycraft"
                                android:textColor="#000"
                                android:textAlignment="center"
                                android:textSize="@dimen/category_fontsize"
                                android:textStyle="normal"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="25"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:orientation="vertical">
                            <android.support.design.widget.FloatingActionButton
                                app:backgroundTint="@color/colorSecondaryText"
                                android:src="@drawable/it"
                                android:layout_gravity="center_horizontal"
                                app:borderWidth="0dp"
                                app:elevation="2dp"
                                android:layout_width="69dp"
                                android:layout_height="71dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="IT | Design"
                                android:textColor="#000"
                                android:textAlignment="center"
                                android:textSize="@dimen/category_fontsize"
                                android:textStyle="normal"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="16dp"
                            android:layout_width="0dp"
                            android:layout_weight="25"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:orientation="vertical">
                            <android.support.design.widget.FloatingActionButton
                                app:backgroundTint="@color/colorSecondaryText"
                                android:src="@drawable/herd"
                                android:layout_gravity="center_horizontal"
                                app:borderWidth="0dp"
                                app:elevation="2dp"
                                android:layout_width="69dp"
                                android:layout_height="71dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Herds"
                                android:textColor="#000"
                                android:textAlignment="center"
                                android:textSize="@dimen/category_fontsize"
                                android:textStyle="normal"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="16dp"
                            android:layout_width="0dp"
                            android:layout_weight="25"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:orientation="vertical">
                            <android.support.design.widget.FloatingActionButton
                                app:backgroundTint="@color/colorSecondaryText"
                                android:src="@drawable/design"
                                android:layout_gravity="center_horizontal"
                                app:borderWidth="0dp"
                                app:elevation="2dp"
                                android:layout_width="69dp"
                                android:layout_height="71dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Community Design"
                                android:textColor="#000"
                                android:textAlignment="center"
                                android:textSize="@dimen/category_fontsize"
                                android:textStyle="normal"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="16dp"
                            android:layout_width="0dp"
                            android:layout_weight="25"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:orientation="vertical">
                            <android.support.design.widget.FloatingActionButton
                                app:backgroundTint="@color/colorSecondaryText"
                                android:src="@drawable/travel"
                                android:layout_gravity="center_horizontal"
                                app:borderWidth="0dp"
                                app:elevation="2dp"
                                android:layout_width="69dp"
                                android:layout_height="71dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Others"
                                android:textColor="#000"
                                android:textAlignment="center"
                                android:textSize="@dimen/category_fontsize"
                                android:textStyle="normal"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/view_pager_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>