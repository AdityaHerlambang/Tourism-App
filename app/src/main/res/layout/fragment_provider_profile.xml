<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProviderProfileFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="128dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/materialIconView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/provider_profile_textCountry"
                    app:layout_constraintEnd_toStartOf="@+id/provider_profile_textCountry"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/provider_profile_textCountry"
                    app:materialIcon="flag"
                    app:materialIconSize="25dp" />

                <EditText
                    android:id="@+id/provider_profile_textCountry"
                    android:layout_width="225dp"
                    android:layout_height="@dimen/form_content_height"
                    android:layout_marginStart="24dp"
                    android:ems="9"
                    android:enabled="false"
                    android:hint="Indonesia"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/materialIconView"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:id="@+id/materialIconView2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/provider_profile_textName"
                    app:layout_constraintEnd_toStartOf="@+id/provider_profile_textName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/provider_profile_textName"
                    app:materialIcon="account" />

                <EditText
                    android:id="@+id/provider_profile_textName"
                    android:layout_width="225dp"
                    android:layout_height="@dimen/form_content_height"
                    android:layout_marginStart="24dp"
                    android:ems="9"
                    android:enabled="false"
                    android:hint="John"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/materialIconView2"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:id="@+id/materialIconView3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="64dp"
                    app:layout_constraintBottom_toBottomOf="@+id/provider_profile_textPhone"
                    app:layout_constraintEnd_toStartOf="@+id/provider_profile_textPhone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/provider_profile_textPhone"
                    app:materialIcon="phone" />

                <EditText
                    android:id="@+id/provider_profile_textPhone"
                    android:layout_width="225dp"
                    android:layout_height="@dimen/form_content_height"
                    android:layout_marginStart="24dp"
                    android:ems="9"
                    android:enabled="false"
                    android:hint="+6281 7300 1200"
                    android:inputType="phone"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/materialIconView3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="16dp">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:id="@+id/materialIconView4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="64dp"
                    app:layout_constraintBottom_toBottomOf="@+id/provider_profile_textEmail"
                    app:layout_constraintEnd_toStartOf="@+id/provider_profile_textEmail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/provider_profile_textEmail"
                    app:materialIcon="email" />

                <EditText
                    android:id="@+id/provider_profile_textEmail"
                    android:layout_width="225dp"
                    android:layout_height="@dimen/form_content_height"
                    android:layout_marginStart="24dp"
                    android:ems="9"
                    android:enabled="false"
                    android:hint="email@gmail.com"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/materialIconView4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

            </android.support.constraint.ConstraintLayout>


        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_yes"
            android:visibility="gone"
            app:backgroundTint="@color/md_green_500"
            app:layout_constraintBottom_toTopOf="@+id/floatingActionButton2"
            app:layout_constraintEnd_toEndOf="@+id/floatingActionButton2" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            app:backgroundTint="@color/md_red_600"
            android:src="@drawable/ic_remove"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>