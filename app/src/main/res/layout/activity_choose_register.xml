<?xml version="1.0" encoding="utf-8"?>

<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:fancy="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity">

        <com.flaviofaria.kenburnsview.KenBurnsView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/login_bg" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin_login"
            android:paddingLeft="@dimen/activity_horizontal_margin_login"
            android:paddingRight="@dimen/activity_horizontal_margin_login"
            android:paddingTop="@dimen/activity_vertical_margin_login">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Register as"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:textStyle="normal"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="24dp"
                    android:textSize="24sp"
                    android:textColor="@color/colorSecondaryText"/>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/traveller_btn"
                    android:layout_gravity="center"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/big_button_height"
                    android:layout_marginTop="16dp"
                    fancy:fb_defaultColor="@color/colorAccent"
                    fancy:fb_radius="30dp"
                    android:padding="8dp"
                    fancy:fb_text="Traveller"
                    fancy:fb_textColor="#FFFFFF"
                    fancy:fb_fontIconResource="\uf0a9"
                    android:textSize="@dimen/big_button_fontSize"
                    fancy:fb_iconPosition="left" />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/provider_btn"
                    android:layout_gravity="center"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/big_button_height"
                    android:layout_marginTop="16dp"
                    fancy:fb_defaultColor="@color/colorAccent"
                    fancy:fb_radius="30dp"
                    android:padding="8dp"
                    fancy:fb_text="Provider"
                    fancy:fb_textColor="#FFFFFF"
                    fancy:fb_fontIconResource="\uf0a9"
                    android:textSize="@dimen/big_button_fontSize"
                    fancy:fb_iconPosition="left" />

                <!--divider-->
                <View
                    android:id="@+id/view1"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/MasukSebagaiIndustri"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorUnderlineDivider" />
                <!--end divider-->

                <TextView
                    android:id="@+id/login_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Or Click Here To Login"
                    android:textColor="#fefefe"
                    android:textStyle="normal"
                    android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>