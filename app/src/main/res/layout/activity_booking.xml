<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".BookingActivity">

            <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondary"
                android:elevation="8dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <android.support.v7.widget.CardView
                    android:id="@+id/realisasi_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textColor="@color/colorSecondaryText"
                                android:background="@color/colorSecondary"
                                android:layout_width="match_parent"
                                android:padding="8dp"
                                android:textSize="@dimen/card_textSize_form"
                                android:layout_height="wrap_content"
                                android:text="Tour Detail"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryText"
                                android:text="Tour Name"
                                android:textSize="14sp"
                                android:textStyle="normal"/>

                            <TextView
                                android:id="@+id/tour_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryText"
                                tools:text="Recipe Developing"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_marginTop="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryText"
                                android:text="Short Description"
                                android:textSize="14sp"
                                android:textStyle="normal"/>

                            <TextView
                                android:id="@+id/tour_shortdesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryText"
                                tools:text="Recipe Developing"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!--FORM COMPONENT-->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textColor="@color/colorSecondaryText"
                                android:background="@color/colorSecondary"
                                android:layout_width="match_parent"
                                android:padding="8dp"
                                android:textSize="@dimen/card_textSize_form"
                                android:layout_height="wrap_content"
                                android:text="Traveller Information"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/form_textInputLayout_marginRight">

                                <EditText
                                    android:id="@+id/tour_start_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/form_content_height"
                                    android:layout_marginTop="@dimen/form_content_marginTop"
                                    android:ems="10"
                                    android:hint="Tour Start Date"
                                    android:enabled="false"
                                    android:inputType="text"
                                    android:textColor="@color/colorPrimaryText"
                                    android:textColorHint="@color/colorSecondaryText"
                                    android:textSize="@dimen/card_textSize_form" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/form_textInputLayout_marginRight">

                                <EditText
                                    android:id="@+id/phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/form_content_height"
                                    android:layout_marginTop="@dimen/form_content_marginTop"
                                    android:ems="10"
                                    android:hint="Phone Number"
                                    android:enabled="false"
                                    android:inputType="text"
                                    android:textColor="@color/colorPrimaryText"
                                    android:textColorHint="@color/colorSecondaryText"
                                    android:textSize="@dimen/card_textSize_form" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/form_textInputLayout_marginRight">

                                <EditText
                                    android:id="@+id/firstname"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/form_content_height"
                                    android:layout_marginTop="@dimen/form_content_marginTop"
                                    android:ems="10"
                                    android:hint="Firstname"
                                    android:enabled="false"
                                    android:inputType="text"
                                    android:textColor="@color/colorPrimaryText"
                                    android:textColorHint="@color/colorSecondaryText"
                                    android:textSize="@dimen/card_textSize_form" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/form_textInputLayout_marginRight">

                                <EditText
                                    android:id="@+id/lastname"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/form_content_height"
                                    android:layout_marginTop="@dimen/form_content_marginTop"
                                    android:ems="10"
                                    android:hint="Lastname"
                                    android:enabled="false"
                                    android:inputType="text"
                                    android:textColor="@color/colorPrimaryText"
                                    android:textColorHint="@color/colorSecondaryText"
                                    android:textSize="@dimen/card_textSize_form" />

                            </android.support.design.widget.TextInputLayout>

                            <!--divider-->
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/MasukSebagaiIndustri"
                                android:layout_marginTop="8dp"
                                android:background="@color/colorUnderlineDivider" />
                            <!--end divider-->

                            <TextView
                                android:layout_marginTop="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryText"
                                android:text="Adult Qty"
                                android:textSize="@dimen/card_textSize_form"
                                android:textStyle="normal"/>

                            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                                android:id="@+id/adult_qty_btn"
                                android:layout_width="130dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="18dp"
                                app:backGroundColor="@color/colorAccent"
                                app:textSize="8sp" />

                            <TextView
                                android:layout_marginTop="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryText"
                                android:text="Child Qty (Less Than 5 Years Old)"
                                android:textSize="@dimen/card_textSize_form"
                                android:textStyle="normal"/>

                            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                                android:id="@+id/child_qty_btn"
                                android:layout_width="130dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="18dp"
                                app:backGroundColor="@color/colorAccent"
                                app:textSize="8sp" />

                            <!--divider-->
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/MasukSebagaiIndustri"
                                android:layout_marginTop="8dp"
                                android:background="@color/colorUnderlineDivider" />
                            <!--end divider-->

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/form_textInputLayout_marginRight">

                                <EditText
                                    android:id="@+id/email"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/form_content_height"
                                    android:layout_marginTop="@dimen/form_content_marginTop"
                                    android:ems="10"
                                    android:hint="Email"
                                    android:enabled="false"
                                    android:inputType="text"
                                    android:textColor="@color/colorPrimaryText"
                                    android:textColorHint="@color/colorSecondaryText"
                                    android:textSize="@dimen/card_textSize_form" />

                            </android.support.design.widget.TextInputLayout>

                            <Button
                                android:id="@+id/btn_book"
                                android:layout_margin="8dp"
                                android:text="BOOK THIS TOUR"
                                android:textColor="@color/colorSecondaryText"
                                android:background="@color/colorSuccess"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>



            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>